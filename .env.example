# ============================================
# REQUIRED: Set these values before deploying
# ============================================

# Database passwords - Change these to secure values
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_PASSWORD=your_secure_db_password_here
WORDPRESS_DB_PASSWORD=your_secure_db_password_here

# ============================================
# OPTIONAL: Pre-configured with sensible defaults
# You can override any of these if needed
# ============================================

# Database Configuration
MYSQL_DATABASE=wordpress
MYSQL_USER=wordpress
WORDPRESS_DB_HOST=db
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_NAME=wordpress

# PHP Settings
PHP_UPLOAD_MAX_FILESIZE=256M
PHP_POST_MAX_SIZE=256M
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
PHP_MAX_INPUT_TIME=300
PHP_MAX_INPUT_VARS=3000

# OPcache Settings
PHP_OPCACHE_MEMORY=128
PHP_OPCACHE_MAX_FILES=4000
PHP_OPCACHE_VALIDATE=0

# Nginx Settings
NGINX_CLIENT_MAX_BODY_SIZE=256M
SERVED_BY=Dokploy-Wordpress

# Redis Settings
REDIS_MAXMEMORY=256mb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# Resource Limits
NGINX_CPU_LIMIT=0.5
NGINX_MEMORY_LIMIT=256M
WORDPRESS_CPU_LIMIT=1.0
WORDPRESS_MEMORY_LIMIT=1G
DB_CPU_LIMIT=1.0
DB_MEMORY_LIMIT=1G
REDIS_CPU_LIMIT=0.5
REDIS_MEMORY_LIMIT=512M
PHPMYADMIN_CPU_LIMIT=0.5
PHPMYADMIN_MEMORY_LIMIT=256M
